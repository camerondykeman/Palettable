<UserControl x:Class="Palettable.ColourWheel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="273" d:DesignWidth="276">
    
    <Grid>
        <Image HorizontalAlignment="Center" Name="image_colourWheelMono" Stretch="Fill" VerticalAlignment="Center" Source="/Palettable;component/Icons/colourWheel.png" ClipToBounds="False" Width="200" Height="200" MouseDown="image_colourWheelMono_MouseDown" />
        <Ellipse Height="80" HorizontalAlignment="Center" Name="elipse_colourWheelInnerMono" Stroke="White" VerticalAlignment="Center" Width="80" Fill="#FFBD5381" />
        <Ellipse Height="150" HorizontalAlignment="Center" Name="elipse_colourWheelTrackMono" Stroke="White" VerticalAlignment="Center" Width="150" />
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Label Content="RGB" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="28,2,0,0" Name="textBox_RGB" VerticalAlignment="Top" Width="39" BorderBrush="white" />
        </Grid>
    </Grid>
</UserControl>
