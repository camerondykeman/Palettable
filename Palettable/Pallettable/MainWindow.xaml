<Window x:Class="Palettable.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Palettable"
    Title="Palettable" Height="440" Width="602" Background="#FF58585C" BorderBrush="#FF58585C">

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New"
                                 Executed="NewDocument" />
        <CommandBinding Command="ApplicationCommands.Open"
                                 Executed="OpenDocument" />
        <CommandBinding Command="ApplicationCommands.Save"
                        CanExecute="SaveDocument_CanExecute"
                                 Executed="SaveDocument" />
        <CommandBinding Command="ApplicationCommands.SaveAs"
                                 Executed="SaveDocumentAs" />
        <CommandBinding Command="ApplicationCommands.Close"
                                 Executed="ApplicationClose" />
    </Window.CommandBindings>

