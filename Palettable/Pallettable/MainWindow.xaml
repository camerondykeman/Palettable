                <Rectangle Grid.ColumnSpan="1"  HorizontalAlignment="Stretch"  Name="rectangleBarTwo"  VerticalAlignment="Stretch" Fill="#FF9C3361" StrokeThickness="0" Margin="2,0" Grid.Column="1" />
                <Rectangle Grid.ColumnSpan="1"  HorizontalAlignment="Stretch"  Name="rectangleBarThree"  VerticalAlignment="Stretch" Fill="#FFCD749B" StrokeThickness="0" Margin="2,0" Grid.Column="2"/>
